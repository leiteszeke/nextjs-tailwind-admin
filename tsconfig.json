{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "#components/*": ["components/*"],
      "#contexts/*": ["./contexts/*"],
      "#helpers/*": ["./helpers/*"],
      "#hocs/*": ["./hocs/*"],
      "#hooks/*": ["./hooks/*"],
      "#images/*": ["./public/images/*"],
      "#services/*": ["./services/*"],
      "#types": ["./types.ts"],
      "#theme": ["./Theme.tsx"]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
